{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["@types/node"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "deps.ts"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 